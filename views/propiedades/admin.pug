extends ../layout/index.pug

block contenido
    body(class="bg-gray-100 min-h-screen flex items-center justify-center bg-gradient-move") 
        .py-10.animate-fade-in
            h1.text-5xl.my-10.font-extrabold.text-center Bienes
                span.font-normal(style="color: #28a745") Raices
            h2.text-center.text-2xl.font-extrabold= pagina

            a(href="/propiedades/crear" class="") Publicar Propiedad

            // Mostrar los errores en la parte superior si existen
            if errores
                div(class="max-w-md mx-auto my-10")
                    each error, index in errores
                        p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold.rounded-md(class="error-msg animate-error-msg-fade-in animate-error-msg-fade-out delay-#{(index + 1) * 5000}ms")
                            img(src="/img/advertencia.png" alt="Advertencia" class="inline-block mr-2" style="width: 20px; height: 20px;")
                            |  #{error.msg}
