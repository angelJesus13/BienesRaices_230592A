extends ../layout/index.pug

block contenido
    body(class="bg-gray-100 min-h-screen flex items-center justify-center bg-gradient-move") 
        .py-10.animate-fade-in
            h1.text-5xl.my-10.font-extrabold.text-center Bienes
                span.font-normal(style="color: #28a745") Raices
            h2.text-center.text-2xl.font-extrabold= pagina

            // Mostrar los errores en la parte superior si existen
            if errores
                div(class="max-w-md mx-auto my-10")
                    each error, index in errores
                        p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold.rounded-md(class="error-msg animate-error-msg-fade-in animate-error-msg-fade-out delay-#{(index + 1) * 5000}ms")
                            img(src="/img/advertencia.png" alt="Advertencia" class="inline-block mr-2" style="width: 20px; height: 20px;")
                            |  #{error.msg}

            .mt-8.mx-auto.max-w-md.bg-white.py-8.px-8.shadow-lg.rounded-lg
                form(action="/auth/login" method="POST" class="space-y-5" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)

                    // Campo de Correo
                    div
                        label.block.text-sm.uppercase.text-gray-300.mb-2.font-bold(for="correo") Correo Electrónico
                        input.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Correo Electrónico" type="email" name="correo" value="" required)

                    // Campo de Contraseña
                    div
                        label.block.text-sm.uppercase.text-gray-300.mb-2.font-bold(for="password") Contraseña
                        input.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Contraseña" type="password" name="password" required)

                    // Enlace para "Olvidé mi contraseña"
                    a(href="/auth/olvide-password" class="text-sm hover:text-gray-500") ¿Olvidaste tu Contraseña?

                    // Botón de iniciar sesión
                    input(class="w-full bg-angelPaleta-custom-green hover:bg-angelPaleta-custom-green-hover text-white font-bold py-2 cursor-pointer rounded-md" type="submit" value="Iniciar Sesión")

                    // Opción de registro
                    p(class="text-center text-gray-500 text-sm mt-4")
                        | o ¿No tienes cuenta? 
                        a(href="/auth/registro" class="text-sm hover:text-gray-500") Regístrate
