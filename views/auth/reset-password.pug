extends ../layout/index.pug

block contenido
    .py-10.animate-fade-in
        h1.text-5xl.my-10.font-extrabold.text-center Bienes
            span.font-normal(style="color: #28a745") Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error, index in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold.rounded-md(class="error-msg animate-error-msg-fade-in animate-fade-out delay-#{(index + 1) * 5000}ms")
                        img(src="/img/advertencia.png" alt="Advertencia" class="inline-block mr-2" style="width: 20px; height: 20px;")
                        |  #{error.msg}  <!-- Aquí se asegura que el mensaje se muestre correctamente -->


        .mt-8.mx-auto.max-w-md
            .bg-white.py-4.px-4.shadow
                form.space-y-5(method="POST" noValidate )
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-300.mb-2.font-bold(for="password") Coloca tu nueva contraseña
                        input.w-full.px-3.py-2.border.border-gray-200.rounded-md.placeholder-gray-400(placeholder="Tu Nueva Contraseña" type="password" name="password")

                    div
                        label.block.text-sm.uppercase.text-gray-300.mb-2.font-bold(for="confirm_password") Confirma tu nueva contraseña
                        input.w-full.px-3.py-2.border.border-gray-200.rounded-md.placeholder-gray-400(placeholder="Confirma tu Nueva Contraseña" type="password" name="confirm_password")
                    input(class="w-full bg-angelPaleta-custom-green hover:bg-angelPaleta-custom-green-hover text-white font-bold py-2 cursor-pointer" type="submit" value="Guardar Contraseña")
